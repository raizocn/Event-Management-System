<% if (typeof isSuccessfulCreatedEvent !== "undefined") { %>
<div class="container">
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <h4 class="alert-heading">
            <%= log.title %>
        </h4>
        <p>
            <%= log.content %>
