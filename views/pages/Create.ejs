<div class="container">
    <form action="/create" method="POST">
        <div class="form-row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="eventName">Event Name:</label>
                    <input name="Event[eventName]" type="text" class="form-control" id="eventName" required>
                </div>
                <div class="form-group">
                    <label for="shortDescription">Short Description:</label>
                    <textarea name="Event[shortDescription]" class="form-control" id="shortDescription" rows="6"
                        required></textarea>
                </div>
                <div class="form-group">
                    <label for="fullDescription">Full Description:</label>
                    <textarea name="Event[fullDescription]" class="form-control" id="fullDescription" rows="10"
                        required></textarea>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="imageUrl">Image URL:</label>
                    <input name="Event[imageUrl]" type="url" class="form-control" id="ImageUrl" required>
                </div>
                <div class="form-group">
                    <label for="organizer">Organizer:</label>
                    <select name="Event[organizer]" class="form-control" id="organizer" required>
                        <option selected disabled hidden>Please pick one:</option>
                        <% organizers.forEach(function (model) { %>
                        <option value="<%= model.name %>">
                            <%= model.name %>
                        </option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="eventDate">Event Date:</label>
                    <input name="Event[eventDate]" type="date" class="form-control" id="eventDate" required>
                </div>
                <div class="form-group">
                    <label for="time">Time:</label>
                    <input name="Event[time]" type="time" class="form-control" id="time" required>
                </div>
                <div class="form-group">
                    <label for="venue">Venue:</label>
                    <select name="Event[venue]" class="form-control" id="venue" required>
                        <option selected disabled>Please pick one:</option>
                        <% venues.forEach(function (model) { %>
                        <option value="<%= model.name %>">
                            <%= model.name %>
                        </option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="quota">Quota:</label>
                    <input name="Event[quota]" type="number" class="form-control" id="quota" required>
                </div>
                <div class="form-group form-check form-check-inline">
                    <input name="Event[highlightedEvent]" type="checkbox" class="form-check-input" id="highlightedEvent"
                        value="true">
                    <label for="highlightedEvent" class="form-check-label">Highlighted Event</label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </form>
</div>