<div class="container">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4">Event Management System</h1>
      <p class="lead">HKBU Event Management System is a web-based system for department and student societies to
        broadcast events and activities as well as registration.</p>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <% events.forEach( function (model) { %>
    <div class="card col-md-4">
      <div class="card-body ">
        <div class="row">
          <img class="card-img-top col-md-12" src="<%= model.imageUrl %>" alt="">
        </div>
        <div class="row">
          <a href="/detail/<%=model.id%>" class="col-md-12 ">
            <h5 class="card-title">
              <%=model.eventName%>
            </h5>
          </a>
        </div>
        <div class="row ">
          <ul class="list-group col-md-12">
            <li class="list-group-item"><b>Date: </b>
              <%=model.eventDate%>
            </li>
            <li class="list-group-item"><b>Time: </b>
              <%=model.startTime%>
              <span>-</span>
              <%=model.endTime%>
            </li>
            <li class="list-group-item"><b>Venue: </b>
              <%=model.venue%>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <%  }) %>
  </div>
</div>
